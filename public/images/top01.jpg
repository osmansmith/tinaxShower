<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1E40AF;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#3B82F6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#60A5FA;stop-opacity:1" />
    </linearGradient>
    <pattern id="showerPattern" patternUnits="userSpaceOnUse" width="100" height="100">
      <rect width="100" height="100" fill="#1E40AF" opacity="0.1"/>
      <circle cx="50" cy="50" r="20" fill="#FFFFFF" opacity="0.05"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="1920" height="1080" fill="url(#heroGradient1)"/>
  <rect width="1920" height="1080" fill="url(#showerPattern)"/>
  
  <!-- Modern Shower Illustration -->
  <g transform="translate(1200, 200)">
    <!-- Shower Wall -->
    <rect x="0" y="0" width="400" height="600" fill="#F8FAFC" opacity="0.9" rx="10"/>
    
    <!-- Shower Head -->
    <rect x="150" y="50" width="100" height="30" rx="15" fill="#374151" opacity="0.8"/>
    <rect x="160" y="60" width="80" height="10" rx="5" fill="#6B7280"/>
    
    <!-- Water Streams -->
    <g opacity="0.6">
      <line x1="170" y1="80" x2="170" y2="400" stroke="#60A5FA" stroke-width="3" opacity="0.8"/>
      <line x1="180" y1="80" x2="180" y2="420" stroke="#60A5FA" stroke-width="2" opacity="0.7"/>
      <line x1="190" y1="80" x2="190" y2="410" stroke="#60A5FA" stroke-width="3" opacity="0.9"/>
      <line x1="200" y1="80" x2="200" y2="430" stroke="#60A5FA" stroke-width="2" opacity="0.8"/>
      <line x1="210" y1="80" x2="210" y2="405" stroke="#60A5FA" stroke-width="3" opacity="0.7"/>
      <line x1="220" y1="80" x2="220" y2="415" stroke="#60A5FA" stroke-width="2" opacity="0.8"/>
      <line x1="230" y1="80" x2="230" y2="400" stroke="#60A5FA" stroke-width="3" opacity="0.6"/>
    </g>
    
    <!-- Shower Controls -->
    <circle cx="320" cy="200" r="25" fill="#374151" opacity="0.8"/>
    <circle cx="320" cy="200" r="15" fill="#6B7280"/>
    <circle cx="320" cy="250" r="20" fill="#374151" opacity="0.8"/>
    <circle cx="320" cy="250" r="12" fill="#6B7280"/>
  </g>
  
  <!-- Decorative Elements -->
  <g opacity="0.3">
    <circle cx="300" cy="200" r="50" fill="#FFFFFF" opacity="0.1"/>
    <circle cx="1600" cy="800" r="80" fill="#FFFFFF" opacity="0.1"/>
    <circle cx="200" cy="900" r="60" fill="#FFFFFF" opacity="0.1"/>
  </g>
  
  <!-- Text Overlay Area -->
  <rect x="0" y="0" width="800" height="1080" fill="url(#heroGradient1)" opacity="0.7"/>
</svg>