<svg width="800" height="800" viewBox="0 0 800 800" xmlns="http://www.w3.org/2000/svg">
  <rect width="800" height="800" fill="#F0FDF4"/>
  
  <!-- Scottish Shower Column -->
  <rect x="350" y="100" width="100" height="600" fill="#374151" rx="10"/>
  <rect x="360" y="110" width="80" height="580" fill="#4B5563" rx="8"/>
  
  <!-- Top Shower Head -->
  <circle cx="400" cy="150" r="30" fill="#6B7280"/>
  <circle cx="400" cy="150" r="25" fill="#9CA3AF"/>
  
  <!-- Side Jets (Multiple Levels) -->
  <g fill="#6B7280">
    <!-- Level 1 -->
    <circle cx="340" cy="250" r="8"/>
    <circle cx="460" cy="250" r="8"/>
    <!-- Level 2 -->
    <circle cx="340" cy="300" r="8"/>
    <circle cx="460" cy="300" r="8"/>
    <!-- Level 3 -->
    <circle cx="340" cy="350" r="8"/>
    <circle cx="460" cy="350" r="8"/>
    <!-- Level 4 -->
    <circle cx="340" cy="400" r="8"/>
    <circle cx="460" cy="400" r="8"/>
  </g>
  
  <!-- Water Jets Effects -->
  <g fill="#60A5FA" opacity="0.7">
    <!-- Top water -->
    <ellipse cx="400" cy="200" rx="4" ry="20"/>
    <!-- Side jets -->
    <ellipse cx="320" cy="250" rx="15" ry="3"/>
    <ellipse cx="480" cy="250" rx="15" ry="3"/>
    <ellipse cx="320" cy="300" rx="15" ry="3"/>
    <ellipse cx="480" cy="300" rx="15" ry="3"/>
    <ellipse cx="320" cy="350" rx="15" ry="3"/>
    <ellipse cx="480" cy="350" rx="15" ry="3"/>
    <ellipse cx="320" cy="400" rx="15" ry="3"/>
    <ellipse cx="480" cy="400" rx="15" ry="3"/>
  </g>
  
  <!-- Control Panel -->
  <rect x="370" y="500" width="60" height="100" fill="#1F2937" rx="5"/>
  <circle cx="385" cy="530" r="8" fill="#EF4444"/>
  <circle cx="415" cy="530" r="8" fill="#3B82F6"/>
  <rect x="375" y="550" width="50" height="20" fill="#4B5563" rx="3"/>
  
  <text x="400" y="750" font-family="Arial" font-size="24" font-weight="bold" text-anchor="middle" fill="#1F2937">Ducha Escocesa</text>
</svg>