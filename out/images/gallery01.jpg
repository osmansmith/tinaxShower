<svg width="800" height="800" viewBox="0 0 800 800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="galleryGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F8FAFC;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E2E8F0;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="800" fill="url(#galleryGrad1)"/>
  
  <!-- Bathroom Wall -->
  <rect x="50" y="50" width="700" height="700" fill="#FFFFFF" stroke="#CBD5E1" stroke-width="2"/>
  
  <!-- Tiles Pattern -->
  <defs>
    <pattern id="tiles" width="50" height="50" patternUnits="userSpaceOnUse">
      <rect width="50" height="50" fill="#F1F5F9" stroke="#E2E8F0" stroke-width="1"/>
    </pattern>
  </defs>
  <rect x="50" y="50" width="700" height="400" fill="url(#tiles)"/>
  
  <!-- Rain Shower Head -->
  <circle cx="400" cy="150" r="60" fill="#374151"/>
  <circle cx="400" cy="150" r="50" fill="#4B5563"/>
  
  <!-- Shower Holes -->
  <g fill="#1F2937">
    <circle cx="380" cy="130" r="3"/>
    <circle cx="400" cy="130" r="3"/>
    <circle cx="420" cy="130" r="3"/>
    <circle cx="370" cy="150" r="3"/>
    <circle cx="390" cy="150" r="3"/>
    <circle cx="410" cy="150" r="3"/>
    <circle cx="430" cy="150" r="3"/>
    <circle cx="380" cy="170" r="3"/>
    <circle cx="400" cy="170" r="3"/>
    <circle cx="420" cy="170" r="3"/>
  </g>
  
  <!-- Water Drops -->
  <g fill="#60A5FA" opacity="0.7">
    <ellipse cx="380" cy="250" rx="3" ry="15"/>
    <ellipse cx="390" cy="240" rx="3" ry="18"/>
    <ellipse cx="400" cy="250" rx="4" ry="20"/>
    <ellipse cx="410" cy="240" rx="3" ry="18"/>
    <ellipse cx="420" cy="250" rx="3" ry="15"/>
  </g>
  
  <!-- Floor Drain -->
  <rect x="350" y="650" width="100" height="20" fill="#6B7280" rx="10"/>
  
  <!-- Text Label -->
  <text x="400" y="750" font-family="Arial" font-size="24" font-weight="bold" text-anchor="middle" fill="#1F2937">Ducha de Lluvia Premium</text>
</svg>